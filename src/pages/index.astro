---
import PokemonCard from "../components/pokemons/PokemonCard.astro";
import type { PokemonListResponse } from "../interfaces/types.response";
import MainLayout from "../layouts/MainLayout.astro";

const resp = await fetch("https://pokeapi.co/api/v2/pokemon");
const data = (await resp.json()) as PokemonListResponse;
const title = "Astro | Home";
---

<MainLayout title={title}>
	<h1 class="text-3xl">Listado de pokemones</h1>
	<section
		aria-label="Listado de Pokemones"
		class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-5"
	>
		{
			data.results.map(({ name, url }) => (
				<PokemonCard name={name} url={url} />
			))
		}
	</section>
</MainLayout>
